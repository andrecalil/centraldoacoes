@model DoadorDetails
<form asp-controller="Doador" asp-action="Create" method="post" class="form-horizontal">
    <h4>Novo Doador</h4>
    <hr />
    <div class="form-group">
        <label class="col-md-2 control-label">Nome</label>
        <div class="col-md-10">
            <input name="Name" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Telefone</label>
        <div class="col-md-10">
            <input name="Telefone" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">E-mail</label>
        <div class="col-md-10">
            <input name="Email" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-default">Salvar  <i class="glyphicon glyphicon-check"></i></button>
        </div>
    </div>
</form>